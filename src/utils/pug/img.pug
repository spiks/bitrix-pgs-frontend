mixin img(options= {})
  -
    var mediaDirPath = '../assets/media';
    var picturePath = `${mediaDirPath}${options.path}`;
    var tagClasses = options.tagClasses || '';
    var tagAlt = options.tagAlt || '';

  img(src= picturePath, alt= tagAlt, class= tagClasses)
